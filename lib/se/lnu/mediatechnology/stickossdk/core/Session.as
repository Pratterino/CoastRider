		//--------------------------------------------------------------------------	//	// Public static class	//	//--------------------------------------------------------------------------		/**	 *	 * This is a global helper class.	 * 	 * @author	Henrik Andersen	 * @version 1.0	 *	 */	public class Session	{		//--------------------------------------------------------------------------		//		// Public static properties		//		//--------------------------------------------------------------------------				public static var application:Engine		public static var keyboard:Keyboard;		public static var sound:SoundManager;		public static var screenKeyboard:ScreenKeyboard;		public static var highscore:Highscore;				//--------------------------------------------------------------------------		//		// Internal static properties		//		//--------------------------------------------------------------------------				internal static var pauseTimer:PauseTimer;				//--------------------------------------------------------------------------		//		// Public getter methods		//		//--------------------------------------------------------------------------				/**		 *		 *	The application's current width.		 * 		 */		public static function get width():int		{			return application.stage.stageWidth;		}				/**		 *		 *	The application's current height.		 * 		 */		public static function get height():int		{			return application.stage.stageHeight;		}				//--------------------------------------------------------------------------		//		// Public static methods		//		//--------------------------------------------------------------------------				/**		 *		 *	Serves as a class constructor for this static class.		 * 		 *	@param		Application		A instnas of the application's document 		 * 								class(Engine).		 *		 */		public static function init(Application:Engine):void 		{			application 	= Application;			keyboard		= new Keyboard();			pauseTimer		= new PauseTimer();			highscore		= new Highscore();			sound			= SoundManager.getInstance();			screenKeyboard	= ScreenKeyboard.getInstance();		}				/**		 *		 *	Updates the <code>Keyboard</code> and <code>PauseTimer</code>.		 *		 */		public static function update():void 		{			keyboard.update();			screenKeyboard.update();			pauseTimer.update();		}				/**		 *		 *	Used to create pauses in the program code, every pause must 		 *	have a timeout and callback.		 *		 *	@param	Seconds		The timeout in seconds.		 *	@param	Callback	The pause callback.		 * 		 */		public static function setPause(Seconds:Number, Callback:Function):void 		{			pauseTimer.setPause(Seconds,  Callback);		}	}}