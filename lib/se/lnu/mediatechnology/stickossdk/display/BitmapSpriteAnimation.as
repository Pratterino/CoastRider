	Whether or not the animation is looped or just plays once.		 * 		 */		public function BitmapSpriteAnimation(Name:String, Frames:Array, FrameRate:Number=1, Looped:Boolean=true, Callback:Function = null)		{			name	= Name;			delay	= 0;						if(FrameRate > 0)			{				delay = 1.0/FrameRate;			}							frames		= Frames;			looped		= Looped;			callback	= Callback;		}	}}